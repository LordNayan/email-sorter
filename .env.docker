# Docker Environment Configuration
# Copy this file to .env and fill in your values before running docker-compose

# Session Secret (generate a random string)
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Encryption Key (32 bytes hex for libsodium - generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=

# Google OAuth (dev-only; test user allowlist)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:4000/auth/google/callback
GOOGLE_TEST_ALLOWED_EMAILS=

# AI Configuration
AI_PROVIDER=openai
OPENAI_API_KEY=

# Note: Database and Redis URLs are configured in docker-compose.yml
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ai_mail?schema=public
# REDIS_URL=redis://redis:6379
